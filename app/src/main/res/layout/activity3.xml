<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F2FA"
    android:orientation="vertical"
    tools:context=".Activity1">
    <TextView
        android:id="@+id/cauhoitext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vienna là thủ đô của nước nào?"
        android:textStyle="bold"
        android:textSize="30dp"
        android:layout_gravity="center"
        android:layout_margin="24dp"
        android:textAlignment="center"/>
    <RadioGroup
        android:id="@+id/luachon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="24dp">
        <RadioButton android:id="@+id/dapan1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Việt Nam"/>
        <RadioButton android:id="@+id/dapan2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Đức"/>
        <RadioButton android:id="@+id/dapan3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Lào"/>
        <RadioButton android:id="@+id/dapan4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Áo"/>
    </RadioGroup>
    <Button
        android:id="@+id/traloiButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trả lời"
        android:layout_gravity="center"
        android:layout_margin="12dp"/>
</LinearLayout>